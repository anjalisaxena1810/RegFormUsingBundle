<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:hint="First Name"
            android:inputType="text"

            />

        <EditText
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fname"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:hint="Last Name"
            android:inputType="text"
            android:gravity="center"/>

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lname"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:hint=" Mobile"
            android:inputType="phone"
            android:gravity="center"/>

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:hint=" E-mail Id"
            android:layout_below="@id/mobile"
            android:focusableInTouchMode="true"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10sp"
            android:text=" Select Gender"
            android:textSize="25sp"
            android:gravity="center"/>

        <RadioGroup
            android:id="@+id/rd_group"
            android:layout_width ="wrap_content"
            android:layout_height = "wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tvgender"

            >


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/btn_male"
                android:textSize="20sp"


                />

            <RadioButton
                android:id="@+id/btn_fmale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/btn_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trangender"
                android:textSize="20sp" />


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Choose Hobbies"
            android:id="@+id/tvhobbies"
            android:textSize="25sp"
            android:layout_below="@+id/rd_group"
            tools:ignore="UnknownId"


            />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbcoding"
            android:text="Coding"
            android:textSize="20sp"
            android:layout_below="@id/tvhobbies"
            android:layout_marginTop="10sp"

            />

        <CheckBox
            android:id="@+id/Accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbcoding"
            android:layout_marginTop="0dp"
            android:text=" Accept Challange"
            android:textSize="20sp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbengg"
            android:text="Engineering"
            android:textSize="20sp"
            android:layout_below="@id/Accept"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teach"
            android:text="Teaching"
            android:textSize="20sp"
            android:layout_below="@id/cbengg"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/travel"
            android:text="Traveling"
            android:textSize="20sp"
            android:layout_below="@id/teach"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:id="@+id/btnsubmit"
            android:layout_marginTop="80sp"
            android:layout_below="@id/travel"
            android:gravity="center"

            />
        <TextView
            android:layout_below="@+id/btnsubmit"
            android:id="@+id/alldetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text=""
        />
        <TextView
            android:id="@+id/txt_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:layout_centerHorizontal="true"

            android:layout_below="@+id/alldetails"/>
        <TextView
            android:id="@+id/txt_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_display"
            />
    </RelativeLayout>
</ScrollView>